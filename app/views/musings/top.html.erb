<% provide(:title, 'Musings-Top Musings') %>

  <div class="row"> 
    <div class="col-xs-9">
      <div class="row">
        <div class = "center jumbotron ">
          <h2>Muse of The Day </h2>
          <%= @list %>
          <%= @randnum %>
          <%= @id %>
          <%= @musing_of_the_day %> 
        
          <p>"Start by doing what's necessary; then do what's possible; and suddenly you are doing the impossible."</p>
          <% if logged_in? %>
            <h3><%= link_to " Create New Musings", new_musing_path, :class=> "btn btn-default"  %></h3>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class = "jumbotron">        
        <ol class="microposts">
        <h2>All Musings </h2>
         <% @musings.each do |musing| %>
          
          <li id="micropost-<%= musing.id %>">
          <span class="title"><%= musing.title %></span>
          <span class="content"><%= musing.content %></br>
          Average Rating: <b><%= (average_ratings(musing) == 0) ? 0: "*"*average_ratings(musing) %></b>
             <% if logged_in? %>
              <td><%= link_to " Rate ", new_rating_path(musing), :class=> "btn btn-default"%>
              <% if current_muser?(musing.muser) %>
                <%= link_to " Edit ", edit_musing_path(musing), :class=> "btn btn-default" %><%= link_to " Delete ", musing, method: :delete, data: { confirm: 'Are you sure you want to delete?'} , :class=> "btn btn-default" %>
              <% end %>
            <% end %>
          </span> 
          </li>
        <% end %>
      </ol>
      </div>
      </div>
    </div>
    <div class="col-xs-3">      
        <div class = "jumbotron">
          <div class="row">
            <h3>Links</h3>
            <h3><%= link_to " Popular Musings ", popular_musings_path, :class=> "btn btn-default" %></h3>
            <h3><%= link_to " Top Musings ", top_musings_path, :class=> "btn btn-default" %></h3>
          </div>
          <div class="row">
            <h3>Categories:</h3>
            <h3><%= link_to " Journal Entry ", root_path, :class=> "btn btn-default" %></h3>
            <h3><%= link_to " Song Lyrics ", root_path, :class=> "btn btn-default" %></h3>
            <h3><%= link_to " Jokes ", root_path, :class=> "btn btn-default" %></h3>
            <h3><%= link_to " Rants ", root_path, :class=> "btn btn-default" %></h3>
            <h3><%= link_to " NoneSense ", root_path, :class=> "btn btn-default" %></h3>
        </div>
      </div>
    </div>
  </div>


