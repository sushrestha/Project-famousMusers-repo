<% provide(:title, 'Musing-Show') %>
<h1>Musing#show</h1>
<p>Find msse in app/views/musing/show.html.erb</p>






<ul>
	<li>Title: <%= @musing.title%></li>
	<li>Content: <%= @musing.content%></li>
	<li>Is Private: <%= @musing.isPrivate%></li>
	<li>Average Ratings:
		<% sum = 0.0 %>
        <% i = 1.0 %>
        <% @musing.stars.each do |s| %>
        <% (s.stars != nil) ? (star = s.stars) : (star = 0.0) %>
          <% sum = sum + star %>
          <% i = i + 1 %>
        <% end %>
        <%= (sum == 0.0) ? 0 : (sum/(i-1)).round(1) %> 

	</li>
		

	


	
</ul>

<%= link_to "Show All Musings", musings_path() %>
<% if logged_in? %>
	<%= link_to " | Show My Musings", muser_path(@current_muser.id)%>
	<% if @current_muser.id == @musing.muser_id %>
		<%= link_to " | Edit Musing", edit_musing_path(@musing) %>
	<% end %>
<% end %>
