<% provide(:title, 'Musings-Edit') %>

<div class = "jumbotron">
<h1>Edit Musing</h1>
<%= form_for(@musing, html: {class: 'form-horizontal'}) do |f| %>
<%= render :partial => "musing_error_messages" %>
  <div class="field form-group">
    <%= f.label :title, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control", placeholder: "Enter The Title"%>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :content, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :content, :class => "form-control", placeholder: "Enter The content"%>
    </div>
  </div>
  <div class="field form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">          
        <%= f.check_box :isPrivate %>
        <%= f.label "Is Private" %> 
      </div>
    </div>
  </div>
  <div class="actions form-group">
     <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit  "Update", :class=> "btn btn-default" %>
      <%= submit_tag "Cancel", :class=> "btn btn-default"  %>    
     </div>
  </div>
<% end %>

</div>