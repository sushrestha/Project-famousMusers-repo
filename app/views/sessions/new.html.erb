<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>

  <table>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>
  </table>

  <p>
    <%= f.submit "Log in" %>
  </p>
    
<% end %>

<p>
  New user? <%= link_to "Sign up now!", signup_path %>
</p>
