<% provide(:title, 'Competition Index') %>
<div class = "jumbotron">

<h1>All Competitions</h1>
	<div class="table-responsive hover">
  	<table class="table table-striped">
    	  <thead>
			  <tr>
			    <th><b>Name</b></th>
			    <th><b>Start</b></th>
			    <th><b>End</b></th>
			    <% if logged_in? && current_muser.isModerator %>
			    	<th><b>Edit</b></th>
				    <th><b>Delete</b></th>
				<% end %>
			  </tr>
		  </thead>
		  <tbody>
		  <% @competitions.each do |competition| %>
		    <tr>
		      <td><%= link_to competition.name, competition_show_path(:id => competition.id) %></td>
		      <td><%= competition.start %></td>
		      <td><%= competition.end %></td>
		      <% if logged_in? && current_muser.isModerator %>
		      	<td><%= link_to "edit", edit_competition_path(competition) %></td>
			  	<td><%= link_to "delete", delete_competition_path(competition), method: :delete, data: { confirm: "You sure?" } %></td>
			  <% end %>
		    </tr>
		  <% end %>
		</tbody>
	</table>
	<%= link_to "New", new_competition_path, :class => "btn btn-default"  %>
</div>
