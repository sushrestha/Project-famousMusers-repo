<% provide(:title, 'Competition-Update') %>

<h1>Edit Competition</h1>

<%= form_for(@competition, url: url_for(:action => 'update')) do |f| %>
	  <div class="field">
	    <%= f.label :name %><br>
	    <%= f.text_field :name %>
	  </div>
	
	  <div class="field">
	    <%= f.label :start %><br>
	    <%= f.date_select :start %>
	  </div>
	  
	  <div class="field">
	    <%= f.label :end %><br>
	    <%= f.date_select :end %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Update", :class=> "btn btn-default" %>&nbsp;<%= submit_tag "Cancel", :class=> "btn btn-default" %>
	  </div>
<% end %>
